<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InformacoesActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:text="Doe Vida!"
        android:textColor="@color/primaryColor"
        android:textSize="20dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/coracao"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/coracao"
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.066"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btInfo1"
        android:layout_width="322dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="204dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="44dp"
        android:background="@drawable/bg_btn_img_rounded"
        android:text="Por que doar sangue?"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="19dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.525"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btInfo2"
        android:layout_width="322dp"
        android:layout_height="50dp"
        android:layout_marginTop="88dp"
        android:textSize="19dp"
        android:background="@drawable/bg_btn_img_rounded"
        android:text="Posso doar sangue?"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btInfo1"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="45dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="44dp"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/btInfo3"
        android:layout_width="322dp"
        android:layout_height="50dp"
        android:textSize="19dp"
        android:layout_marginTop="88dp"
        android:background="@drawable/bg_btn_img_rounded"
        android:text="Preparativos para doação"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btInfo2"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="45dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="44dp"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="365dp"
        android:layout_height="47dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Clique em um dos botões abaixo para saber mais informações"
        android:textColor="#000000"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.652"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />


</androidx.constraintlayout.widget.ConstraintLayout>