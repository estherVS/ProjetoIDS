<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IntervaloActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="72dp"
        android:layout_marginBottom="10dp"
        android:text="Intervalo entre as doações:"
        android:textColor="@color/primaryColor"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/txi1"
        android:layout_below="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">

        <ImageView
            android:id="@+id/marcgota"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:padding="2dp"
            android:src="@drawable/ic_fem" />

        <TextView
            android:id="@+id/txtInfo1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/marcgota"
            android:layout_toRightOf="@+id/marcgota"
            android:text="Mulheres - 90 dias (máximo de 03 doações nos últimos 12 meses)."
            android:textColor="#000000"
            android:layout_marginStart="8dp"
            android:layout_marginTop="3dp"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_marginLeft="8dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/txi1"
        android:layout_margin="4dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/marcgota2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:padding="2dp"
            android:src="@drawable/ic_masc" />

        <TextView
            android:id="@+id/txtInfo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/marcgota2"
            android:layout_toRightOf="@+id/marcgota2"
            android:text="Homens - 60 dias (máximo de 04 doações nos últimos 12 meses)."
            android:textColor="#000000"
            android:layout_marginStart="8dp"
            android:layout_marginTop="3dp"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_marginLeft="8dp" />

    </RelativeLayout>

</RelativeLayout>